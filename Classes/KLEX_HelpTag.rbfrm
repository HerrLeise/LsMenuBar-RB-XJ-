im i,n As Integer		    n = cs.Ubound		    Dim p As Picture = New Picture(1,1,32)		    DIm lwidth As Double		    Dim lHeight As Double		    		    p.Graphics.TextFont = HelpLabel.TextFont		    p.Graphics.TextSize = HelpLabel.TextSize		    		    		    if n>-1 Then		      		      n = cs.Ubound		      for i=0 to n		        lwidth = Max(lwidth,p.Graphics.StringWidth(cs(i)))		      Next		      		      lHeight = Max(26,p.Graphics.StringHeight(caption,lwidth))		    Else		      lwidth = p.Graphics.StringWidth(caption)		      lHeight = Max(26,p.Graphics.StringHeight(caption,lwidth))		    End If		    		    self.width = lwidth + 14		    self.Height = lHeight + 10		    		    		    		  End If		End Sub	#tag EndMethod	#tag ComputedProperty, Flags = &h0		#tag Getter			Get			  return mCaption			End Get		#tag EndGetter		#tag Setter			Set			  mCaption = value			  if HelpLabel<>Nil THen HelpLabel.Text = value			  			End Set		#tag EndSetter		Caption As String	#tag EndComputedProperty	#tag Property, Flags = &h21		Private mCaption As String	#tag EndProperty#tag EndWindowCode